<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/contactListFragment">

    <fragment
        android:id="@+id/contactListFragment"
        android:name="com.example.aston_intensiv_3.ContactListFragment"
        android:label="fragment_contact_list"
        tools:layout="@layout/fragment_contact_list" >
        <action
            android:id="@+id/action_contactListFragment_to_addContactFragment2"
            app:destination="@id/addContactFragment" />
        <action
            android:id="@+id/action_contactListFragment_to_updateContactFragment"
            app:destination="@id/updateContactFragment" />
    </fragment>
    <fragment
        android:id="@+id/addContactFragment"
        android:name="com.example.aston_intensiv_3.AddContactFragment"
        android:label="fragment_add_contact"
        tools:layout="@layout/fragment_add_contact" >
        <action
            android:id="@+id/action_addContactFragment_to_contactListFragment"
            app:destination="@id/contactListFragment"
            app:popUpTo="@id/contactListFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/updateContactFragment"
        android:name="com.example.aston_intensiv_3.UpdateContactFragment"
        android:label="fragment_update_contact"
        tools:layout="@layout/fragment_update_contact" >
        <action
            android:id="@+id/action_updateContactFragment_to_contactListFragment"
            app:destination="@id/contactListFragment"
            app:popUpTo="@id/contactListFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="contactId"
            app:argType="integer" />
    </fragment>
</navigation>